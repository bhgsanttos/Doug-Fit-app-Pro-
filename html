  <div class="container">
    <h1>Doug Fit</h1>
    <p>Entre ou crie sua conta para começar!</p>
    <input type="email" id="email" placeholder="Email">
    <input type="password" id="senha" placeholder="Senha">
    <button onclick="logar()">Entrar</button>
    <div class="switch">
      Não tem conta? <span onclick="criarConta()">Criar agora</span>
    </div>
  </div>

  <script>
    function logar() {
      const email = document.getElementById('email').value;
      const senha = document.getElementById('senha').value;
      if (email && senha) {
        localStorage.setItem("usuario", JSON.stringify({ email }));
        alert("Login realizado com sucesso!");
        window.location.href = "tela2.html"; // próxima tela
      } else {
        alert("Preencha todos os campos.");
      }
    }

    function criarConta() {
      alert("Redirecionando para a criação de conta...");
      // pode redirecionar para uma tela de cadastro separado se quiser
    }
  </script>
